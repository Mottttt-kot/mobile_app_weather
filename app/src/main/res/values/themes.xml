<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weathe" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainTextStyle">
        <item name="android:fontFamily">@font/barlow</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="SecondTextStyle">
        <item name="android:fontFamily">@font/barlow_medium</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TherdTextStyle">
        <item name="android:fontFamily">@font/barlow_light</item>
        <item name="android:textColor">#666666</item>
    </style>
    
    <style name="Styleforbottomsheetactivity">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/barlow</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
    
    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">@android:color/transparent</item>
    </style>
</resources>