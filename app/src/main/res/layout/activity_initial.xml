<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".initial_activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:fontFamily="@font/barlow"
        android:gravity="center_horizontal|center_vertical"
        android:text="Привет!\n Это привественное окно, нажми next  чтобы перейти дальше.\n\nРазработчик: Матвей Володькин\n Email: matvolodkin@gmail.com"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EDADAD"
            android:fontFamily="@font/barlow_medium"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#DCF4C2"
            android:fontFamily="@font/barlow_medium"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="Next" />
    </LinearLayout>

</LinearLayout>